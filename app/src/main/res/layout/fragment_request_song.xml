<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/google_black_primary"
    android:clickable="true"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        >

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:id="@+id/cvRequestSong"
        app:cardElevation="10dp"
        app:cardCornerRadius="6dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="@color/google_black_primary"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvRequestHeader"
                android:text="@string/request_for_a_song_to_us"
                android:fontFamily="@font/spartanmedium500"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/ivClose"
                app:layout_constraintTop_toTopOf="@id/tvRequestHeader"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/close__1_"
                android:layout_marginEnd="15dp"/>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/cvSongName"
                app:cardCornerRadius="5dp"
                app:cardElevation="1dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardBackgroundColor="@color/google_black_primary"
                app:layout_constraintTop_toBottomOf="@id/tvRequestHeader"
                app:layout_constraintStart_toStartOf="@id/tvRequestHeader"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/containerSongName"
                    >
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="@string/enter_song_name"
                        android:textColor="@color/white"
                        android:fontFamily="@font/spartanmedium500"
                        android:id="@+id/tvSongName"
                        android:textSize="12sp"/>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="1dp"
                        app:strokeColor="@color/white"
                        app:strokeWidth="1dp"
                        android:layout_marginTop="15dp"
                        app:layout_constraintTop_toBottomOf="@id/tvSongName"
                        app:layout_constraintStart_toStartOf="parent"
                        app:cardBackgroundColor="@color/google_black_primary"
                        >
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@null"
                            android:hint="Song name..."
                            android:textColorHint="@color/transparent_white"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:id="@+id/etSongName"
                            android:gravity="center_vertical"
                            android:padding="8dp"
                            android:theme="@style/etTheme"/>
                    </com.google.android.material.card.MaterialCardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/containerArtist"
                app:layout_constraintTop_toBottomOf="@id/cvSongName"
                app:layout_constraintStart_toStartOf="@id/cvSongName"
                app:layout_constraintEnd_toEndOf="@id/cvSongName"
                android:layout_marginTop="35dp"
                >
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@string/artist_name"
                    android:textColor="@color/white"
                    android:fontFamily="@font/spartanmedium500"
                    android:id="@+id/tvArtistName"
                    android:textSize="12sp"/>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="1dp"
                    app:strokeColor="@color/white"
                    app:strokeWidth="1dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@id/tvArtistName"
                    app:layout_constraintStart_toStartOf="parent"
                    app:cardBackgroundColor="@color/google_black_primary"
                    >
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@null"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:id="@+id/etArtistName"
                        android:gravity="center_vertical"
                        android:textColorHint="@color/transparent_white"
                        android:hint="Artist name..."
                        android:padding="8dp"
                        android:theme="@style/etTheme"/>
                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnRequestSong"
                android:text="@string/request_song"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/cvSongName"
                app:layout_constraintEnd_toEndOf="@id/cvSongName"
                android:gravity="center"
                android:backgroundTint="@color/black_90"
                android:textSize="15sp"
                android:textAllCaps="false"
                app:strokeColor="@color/white"
                app:strokeWidth="1dp"
                android:padding="12dp"
                android:fontFamily="@font/spartanreg"
                app:layout_constraintTop_toBottomOf="@id/containerArtist"
                android:layout_marginTop="30dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_white"
        android:id="@+id/clProgress"
        android:visibility="gone"
        >
        <include layout="@layout/progress_bar"
            android:id="@+id/pbRequestSong"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>